{
	"$schema": "https://turborepo.com/schema.v2.json",
	"globalPassThroughEnv": ["GITHUB_ACTIONS", "CI"],
	"tasks": {
		"build:dev": {
			"cache": true,
			"dependsOn": ["types:check", "generate:catalogs"],
			"inputs": [
				"$TURBO_DEFAULT$",
				"$TURBO_ROOT$/package.json",
				"$TURBO_ROOT$/pnpm-lock.yaml",
				"$TURBO_ROOT$/pnpm-workspace.yaml",
				"package.json",
				"rslib.config.ts",
				"tsconfig.json",
				"src/**/*.ts",
				"README.md",
				"LICENSE"
			],
			"outputLogs": "full",
			"outputs": ["dist/dev/**", ".rslib/declarations/dev/**"]
		},
		"build:prod": {
			"cache": true,
			"dependsOn": ["types:check", "generate:catalogs"],
			"inputs": [
				"$TURBO_DEFAULT$",
				"$TURBO_ROOT$/package.json",
				"$TURBO_ROOT$/pnpm-lock.yaml",
				"$TURBO_ROOT$/pnpm-workspace.yaml",
				"package.json",
				"rslib.config.ts",
				"tsconfig.json",
				"src/**/*.ts",
				"README.md",
				"LICENSE"
			],
			"outputLogs": "full",
			"outputs": ["dist/npm/**", ".rslib/declarations/npm/**"]
		},
		"generate:catalogs": {
			"cache": false,
			"dependsOn": [],
			"inputs": [
				"$TURBO_DEFAULT$",
				"$TURBO_ROOT$/package.json",
				"$TURBO_ROOT$/pnpm-lock.yaml",
				"$TURBO_ROOT$/pnpm-workspace.yaml",
				"scripts/generate-catalogs.ts",
				"lib/catalogs/**"
			],
			"outputLogs": "full",
			"outputs": ["lib/catalogs/genertated.ts"]
		},
		"types:check": {
			"cache": true,
			"dependsOn": [],
			"inputs": ["*.ts", "lib/**/*.ts", "lib/**/*.mts"],
			"outputLogs": "errors-only",
			"outputs": []
		}
	}
}
